{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "removeComments": false,
    "declaration": true,
    "target": "esnext",
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declarationDir": "dist/types",
    "strict": true
  },
  "include": ["src/**/*.ts","src/*.ts", "tests/*.ts", "tests/**/*.ts"]
}
